<HomeScreen>:
    name: 'home'
    FloatLayout:                          
        Label:
            text: 'Olá Escola'
            color: (0,0,0)
            font_size: '24dp'
            pos_hint: {"center_x": .2, "center_y": .9}   
            
        Button:
            background_normal: 'notification_icon_2.png'
            size_hint: .13, .1
            pos_hint: {"center_x": .9, "center_y": .9} 
            on_release:
                app.root.current = 'notificacoes'

        Button:
            text: 'Turmas'
            size_hint: .85, .065
            pos_hint: {"center_x": .5, "center_y": .70}
